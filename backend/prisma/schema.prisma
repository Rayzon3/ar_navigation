generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model museumOwner {
  id           String  @id @default(cuid())
  firstName    String?
  lastName     String?
  email        String?  @unique
  mobileNum    String?  @unique
  password     String?
  organisation String?
  museum       museum?
}

model museum {
  id           String      @id @default(cuid())
  owner        museumOwner? @relation(fields: [id], references: [id])
  tags         String[]
  inTime       String?
  outTime      String?
  ARAnchorList String[]
}

